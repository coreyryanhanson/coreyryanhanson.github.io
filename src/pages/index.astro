---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Corey Ryan Hanson</div>
    <div class="text-3xl py-3 font-bold">Machine Learning Engineer and Generative AI Tamer</div>
    <div class="py-2">
      <text class="text-lg">
        Always learning and growing, I am a Data Scientist who has spent 10 years crafting video content for television, film, and the web.
        After becoming adept in many realms of post production, I was captivated by the disruptive possibilities that come with recent advancements in machine learning.
        <br><br>
        â€‹Now I am venturing off in an exciting new direction, taking my unique experiences with me and offering a creative perspective.
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="https://www.linkedin.com/in/coreyhanson/" target="_blank"> Let's connect!</a>
      <!-- <a href="https://github.com/manuelernestog/astrofy" target="_blank" class="btn btn-outline ml-5">
        Get This template -->
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My last projects {"</>"}</div>
  </div>

  <HorizontalCard
    title="ComfyQR"
    img="/portfolio/qr-comfyqr.webp"
    desc="Stable Diffusion QR generation within ComfyUI. Custom nodes suitable for workflows from generating basic QR images to techniques with advanced QR masking."
    url="https://github.com/coreyryanhanson/ComfyQR"
    badge="FOSS"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Hospital Accessibility Pipeline (Virtue Foundation)"
    img="/projects/hospital_accessibility.webp"
    desc="A cloud based geospatial pipeline that leverages the WHO's Accessmod 5 tool automating analyses and visualizations efficiently end to end for 72 low and low-middle income countries."
    url="#"
    badge="New"
    target="_self"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Japanese Text Classifiers"
    img="/projects/japanese_text_classifiers.webp"
    desc="Using neural networks to classify Japanese hiragana characters. Vector training data was self generated using a custom android app built to capture strokes in real time."
    url="https://github.com/coreyryanhanson/japanese_text_classifiers"
    badge="FOSS"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          // Switch commented code in ...page and ...slug to turn off auto slug generation
          // url={"/blog/" + post.slug}
          url={"/blog/" + createSlug(post.data.title)}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
